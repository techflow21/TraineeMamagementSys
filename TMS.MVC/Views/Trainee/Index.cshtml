@model IEnumerable<TMS.DAL.Dtos.TraineeDto>
<br /><br />
<section id="about" class="about">
    <div class="container" data-aos="fade-up">

        <div class="row">
            <div class="col-lg-12 pt-4 pt-lg-0 order-2 order-lg-1 content">

<p>
    <a asp-action="Create" class="btn btn-primary">Register New Trainee</a>
</p>
<br />

<h2>List of Trainees</h2>
<br />

<table class="table">
    <thead>
        <tr>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Phone Number</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var trainee in Model)
        {
            <tr>
                <td>@trainee.LastName</td>
                <td>@trainee.FirstName</td>
                <td>@trainee.Email</td>
                <td>@trainee.Address</td>
                <td>@trainee.PhoneNumber</td>
                <td>
                    <a asp-action="Details" asp-route-id="@trainee.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@trainee.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@trainee.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
</div>
</div>
</section>
